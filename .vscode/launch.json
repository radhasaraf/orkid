    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) attach model3Dpbr",
            "type": "cppdbg",
            "request": "attach",
            "processId":"${command:pickProcess}",
            "program": "${env:OBT_STAGE}/bin/ork.example.lev2.gfx.model3Dpbr.exe",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) debug skinning",
            "type": "cppdbg",
            "request": "launch",
            "program": "${env:OBT_STAGE}/bin/ork.example.lev2.gfx.skinning.exe",
            "MIMode": "gdb",
            "args": ["--testnum","2"],
            "cwd": "${env:OBT_STAGE}",
            "setupCommands": [
                {
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
        {
            "name": "(gdb) debug tx81z.bank",
            "type": "cppdbg",
            "request": "launch",
            "program": "${env:OBT_STAGE}/bin/ork.test.lev2.aud.singularity.tx81z.bank.exe",
            "MIMode": "gdb",
            "args": ["--test","midi","--port","2"],
            "cwd": "${env:OBT_STAGE}",
            "setupCommands": [
                {
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}